{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["es6"],
      "jsx": "react-native",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "lib"
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
  }